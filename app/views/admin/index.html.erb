<div id = "admin_index">
<% if admin_signed_in?%>
<%= link_to "Sign out", destroy_admin_session_path, :method => :delete,class: "btn btn-primary" %>
<%else%>
<%= link_to "Login", "/admin/login",class: "btn btn-primary"  %>
<%end%>
<% flash.each do |type, msg| %>
    <div class="alert alert-info">
      <%= msg %>
    </div>
<%end%> 
<% if admin_signed_in?%>
<div class="row">
    <div class="col-md-12">
      <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#user-detail" data-toggle="tab">SeeUser</a></li>
          <li><a href="#user-investments" data-toggle="tab">SeeWishes</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="user-detail">
            <table class="table table-striped table-bordered" id="tableUser">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Nickname</th>
                  <th scope="col">Birthday</th>
                  <th scope="col"><%= link_to "/admin/create_user" do%>
                    <i class="fa fa-plus fa-lg" aria-hidden="true"></i>
                  <%end%>
                  </th>
                </tr>
              </thead>
             <tbody id="users">
              <%= render 'user' %>
            </tbody>
            </table>
              <div id="paginator">
              <%= paginate @users, remote: true,theme: 'twitter-bootstrap-3', param_name: :user_page %>
              </div>
          </div>
      <div class="tab-pane" id="user-investments">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th scope="col">ReceivedUser</th>
                <th scope="col">Sender</th>
                <th scope="col">ConTent</th>
              </tr>
            </thead>
            <tbody id='message'>
              <%= render 'message' %>
            </tbody>
          </table>
        <div id="paginator1">
          <%= paginate @messages, remote: true,theme: 'twitter-bootstrap-3', param_name: :message_page %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%end%>
</div>